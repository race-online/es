<script>
const sheetId = "1Jx8AvjYbslVL7zNIGkf58-4Pysbvjl0SWdD6XxkOlL8";
const sheetName = "VRat3";
const url = `https://docs.google.com/spreadsheets/d/${sheetId}/gviz/tq?tqx=out:json&sheet=${sheetName}`;

fetch(url)
  .then(res => res.text())
  .then(data => {
    const json = JSON.parse(data.substr(47).slice(0, -2));

    // Encabezados con Lic. en lugar de #
    const cols = ["Posici칩n","Clase","","Piloto","Lic.","Equipo","Marca","Espec.","VRat"];
    const rows = json.table.rows;

    const table = document.getElementById("clasificacion");

    const thead = document.createElement("thead");
    const trHead = document.createElement("tr");
    cols.forEach((col,i) => {
      const th = document.createElement("th");
      th.innerText = col;
      if(i === 2) th.className = "indicador";
      trHead.appendChild(th);
    });
    thead.appendChild(trHead);
    table.appendChild(thead);

    const tbody = document.createElement("tbody");
    rows.forEach((row, rowIndex) => {
      const tr = document.createElement("tr");
      cols.forEach((colName, i) => {
        const td = document.createElement("td");

        if(i === 0) {
          const value = row.c[0]?.v || "";
          td.innerHTML = `<div class="posicion-box"><span>${value}</span></div>`;
          td.className = "posicion";
        } else if(i === 1) {
          td.className = "clase";
          td.innerText = row.c[1]?.v || "";
        } else if(i === 2) {
          td.className = "indicador";
          td.innerHTML = rowIndex < 18 ? '<div class="triangulo"></div>' : '<div class="rectangulo"></div>';
        } else if(i === 3) {
          td.className = "piloto";
          td.innerText = row.c[2]?.v || "";
        } else if(i === 4) {
          td.className = "dorsal";
          td.innerHTML = `<div class="dorsal-box"><span>${row.c[3]?.v || ""}</span></div>`;
        } else if(i === 5) {
          td.className = "equipo";
          td.innerText = row.c[4]?.v || "";
        } else if(i === 6) {
          td.className = "marca";
          td.innerHTML = `<img src="${row.c[5]?.v || ""}" alt="Marca">`;
        } else if(i === 7) {
          td.className = "spec";
          td.innerText = row.c[6]?.v || "";
        } else if(i === 8) {
          td.className = "vrat";
          const vratValue = (row.c[7] && row.c[7].v !== null && row.c[7].v !== "") ? row.c[7].v : 0;
          td.innerText = vratValue;
        }

        tr.appendChild(td);
      });
      tbody.appendChild(tr);
    });
    table.appendChild(tbody);
  })
  .catch(err => console.error(err));
</script>
</body>
